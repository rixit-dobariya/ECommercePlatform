@model ContactDetails

@{
    ViewData["Title"] = "Contact Details";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Contact Details</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-controller="Home">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-controller="Page" asp-action="Contact">Contact Details</a>
        </li>
    </ul>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Update Contact Details</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <input asp-for="Id" hidden />

                        <div class="form-group">
                            <label asp-for="PhoneNumbers"></label>
                            <input type="text" class="form-control" asp-for="PhoneNumbers" placeholder="Enter Phone Numbers (comma-separated)" />
                            <span asp-validation-for="PhoneNumbers" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Emails"></label>
                            <input type="text" class="form-control" asp-for="Emails" placeholder="Enter Emails (comma-separated)" />
                            <span asp-validation-for="Emails" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <textarea class="form-control" id="address" asp-for="Address" placeholder="Enter Address"></textarea>
                            <span asp-validation-for="Address" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-success">Save Contact Details</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.css" rel="stylesheet">

    <script>
        $(document).ready(function () {
            $('#address').summernote({
                placeholder: 'Enter extra content...',
                tabsize: 2,
                height: 200,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture']],
                    ['view', ['fullscreen', 'codeview']]
                ]
            });
        });
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
