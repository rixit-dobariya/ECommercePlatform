@model AboutPageContent

@{
    ViewData["Title"] = "Manage About Page Content";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">About Page Content</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-controller="Home">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-controller="Page" asp-action="About">About Page</a>
        </li>
    </ul>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Manage About Page Content</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <input asp-for="Id" hidden />

                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea class="form-control" asp-for="Description" placeholder="Enter description" required></textarea>
                            <span asp-validation-for="Description" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Vision"></label>
                            <textarea class="form-control" asp-for="Vision" placeholder="Enter vision statement" required></textarea>
                            <span asp-validation-for="Vision" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Mission"></label>
                            <textarea class="form-control" asp-for="Mission" placeholder="Enter mission statement" required></textarea>
                            <span asp-validation-for="Mission" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Goal"></label>
                            <textarea class="form-control" asp-for="Goal" placeholder="Enter goal statement" required></textarea>
                            <span asp-validation-for="Goal" class="form-text text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ExtraContent"></label>
                            <textarea id="extraContent" class="form-control" asp-for="ExtraContent"></textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.css" rel="stylesheet">

    <script>
        $(document).ready(function () {
            $('#extraContent').summernote({
                placeholder: 'Enter extra content...',
                tabsize: 2,
                height: 200,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture']],
                    ['view', ['fullscreen', 'codeview']]
                ]
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
