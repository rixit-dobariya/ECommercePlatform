@model UserVM

@{
	ViewData["Title"] = "Edit User";
}
<div class="page-header">
	<h3 class="fw-bold mb-3">Users</h3>
	<ul class="breadcrumbs mb-3">
		<li class="nav-home">
			<a asp-controller="Home">
				<i class="icon-home"></i>
			</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a asp-controller="User">Users</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a asp-controller="User" asp-action="Edit" asp-route-id="@Model.User.UserId">
				Edit User
			</a>
		</li>
	</ul>
</div>
<form method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Edit User</div>
				</div>
				<div class="card-body">
					<div class="row">
						<input asp-for="User.IsEmailVerified" value="True" hidden />
						<input asp-for="User.ProfilePicture" hidden />
						<input asp-for="User.Password" hidden />
						<input asp-for="User.UserId" hidden />
						<div class="form-group col-md-6">
							<label asp-for="User.FullName"></label>
							<input class="form-control" asp-for="User.FullName" placeholder="Enter Full name of User" />
							<span asp-validation-for="User.FullName" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="User.Email"></label>
							<input class="form-control" asp-for="User.Email" placeholder="Enter Email of User" />
							<span asp-validation-for="User.Email" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="User.Phone"></label>
							<input class="form-control" asp-for="User.Phone" placeholder="Enter Phone number of User" />
							<span asp-validation-for="User.Phone" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="User.ProfilePicture"></label>
							<input type="file" name="profilePicture" class="form-control" placeholder="Enter User Profile Picture" accept="image/*" />
							<span class="text-danger" asp-validation-for="User.ProfilePicture"></span>
							<div class="col-md-3">
								<img src="@Model.User?.ProfilePicture" class="img-fluid" />
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Update User</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}