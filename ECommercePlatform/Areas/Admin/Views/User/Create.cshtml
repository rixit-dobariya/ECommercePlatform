@model UserVM

@{
	ViewData["Title"] = "Add User";
}
<div class="page-header">
	<h3 class="fw-bold mb-3">Users</h3>
	<ul class="breadcrumbs mb-3">
		<li class="nav-home">
			<a asp-controller="Home">
				<i class="icon-home"></i>
			</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a asp-controller="User">Users</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a asp-controller="User" asp-action="Create">
				Add User
			</a>
		</li>
	</ul>
</div>
<form method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Add User</div>
				</div>
				<div class="card-body">
					<div class="row">
						<input asp-for="User.IsEmailVerified" value="True" hidden />
						<div class="form-group col-md-6">
							<label asp-for="User.FullName"></label>
							<input class="form-control" asp-for="User.FullName" placeholder="Enter Full name of User" />
							<span asp-validation-for="User.FullName" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="User.Password"></label>
							<input class="form-control" asp-for="User.Password" placeholder="Enter password of User" />
							<span asp-validation-for="User.Password" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="User.Email"></label>
							<input class="form-control" asp-for="User.Email" placeholder="Enter Email of User" />
							<span asp-validation-for="User.Email" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="User.Phone"></label>
							<input class="form-control" asp-for="User.Phone" placeholder="Enter Phone number of User" />
							<span asp-validation-for="User.Phone" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-12">
							<label asp-for="User.ProfilePicture"></label>
							<input type="file" asp-for="User.ProfilePicture" name="profilePicture" class="form-control" placeholder="Enter User Profile Picture" accept="image/*" />
							<span asp-validation-for="User.ProfilePicture" class="form-text text-danger"></span>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-success">Add User</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}