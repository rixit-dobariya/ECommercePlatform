@model CategoryVM

@{
	ViewData["Title"] = "Edit Category";
}
<div class="page-header">
	<h3 class="fw-bold mb-3">Categories</h3>
	<ul class="breadcrumbs mb-3">
		<li class="nav-home">
			<a asp-controller="Home">
				<i class="icon-home"></i>
			</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a asp-controller="Category">Categories</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a asp-controller="Category" asp-action="Upsert" asp-route-id="@Model.Category?.CategoryId">
				Edi Cattegory
			</a>
		</li>
	</ul>
</div>
<form method="post">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Edit Category</div>
				</div>
				<div class="card-body">
					<div class="row">
						<input asp-for="Category.CategoryId" hidden />
						<div class="form-group">
							<label asp-for="Category.Name"></label>
							<input type="text" class="form-control" asp-for="Category.Name" placeholder="Enter Category Name" />
							<span asp-validation-for="Category.Name" class="form-text text-danger"></span>
						</div>
						@if (Model.CategoriesList != null)
						{
							<div class="form-group">
								<label asp-for="Category.ParentCategoryId"></label>
								<select class="form-select" asp-for="Category.ParentCategoryId" asp-items="@Model.CategoriesList">
									<option disabled selected>-Select Parent Category-</option>
								</select>
								<span asp-validation-for="Category.ParentCategoryId" class="form-text text-danger"></span>
							</div>
						}
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Update Category</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
