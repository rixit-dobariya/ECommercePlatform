@model Category

@{
	string actionType = Model.CategoryId != 0 ? "Edit" : "Add";
	ViewData["Title"] = actionType + " Category";
}
<div class="page-header">
	<h3 class="fw-bold mb-3">Forms</h3>
	<ul class="breadcrumbs mb-3">
		<li class="nav-home">
			<a href="#">
				<i class="icon-home"></i>
			</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a href="#">Forms</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a href="#">Basic Form</a>
		</li>
	</ul>
</div>
<form method="post">
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">@actionType Category</div>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="form-group">
						<label asp-for="CategoryId">Email Address</label>
							<input type="text" class="form-control" asp-for="CategoryId" placeholder="Enter Category Name" />
						<small id="emailHelp2" class="form-text text-muted">We'll never share your email with anyone else.</small>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</form>