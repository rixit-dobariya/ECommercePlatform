@model ECommercePlatform.Models.Response

@{
    ViewData["Title"] = "Reply to Response";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Response</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-controller="Home">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-controller="Response">Responses</a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-controller="Response" asp-action="Reply">Reply</a>
        </li>
    </ul>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Reply to Response</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <input hidden asp-for="ResponseId" />
                        <div class="form-group col-md-6">
                            <label asp-for="Name"></label>
                            <input class="form-control" asp-for="Name" readonly />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Email"></label>
                            <input class="form-control" asp-for="Email" readonly />
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Reply"></label>
                            <textarea class="form-control" asp-for="Reply" rows="3" placeholder="Enter your reply here..."></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Send Reply</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}