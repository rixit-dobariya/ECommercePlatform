@model ECommercePlatform.Models.Banner

@{
	ViewData["Title"] = "Add Banner";
}
<div class="page-header">
	<h3 class="fw-bold mb-3">Banners</h3>
	<ul class="breadcrumbs mb-3">
		<li class="nav-home">
			<a asp-controller="Home"><i class="icon-home"></i></a>
		</li>
		<li class="separator"><i class="icon-arrow-right"></i></li>
		<li class="nav-item"><a asp-controller="Banner">Banners</a></li>
		<li class="separator"><i class="icon-arrow-right"></i></li>
		<li class="nav-item"><a asp-controller="Banner" asp-action="Create">Add Banner</a></li>
	</ul>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Add Banner</div>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="form-group col-md-6">
							<label asp-for="Title"></label>
							<input asp-for="Title" class="form-control" placeholder="Enter banner title (optional)" />
							<span asp-validation-for="Title" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="Text"></label>
							<input asp-for="Text" class="form-control" placeholder="Enter banner text (optional)" />
							<span asp-validation-for="Text" class="form-text text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="ImageUrl">Banner Image</label>
							<input class="form-control" type="file" name="bannerImage" />
							<span asp-validation-for="ImageUrl" class="form-text text-danger"></span>

						</div>

						<div class="form-group mt-3">
							<button type="submit" class="btn btn-success">Add Banner</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
		<partial name="_ValidationScriptsPartial" />
}
