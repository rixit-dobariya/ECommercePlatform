@model Review

@{
    ViewData["Title"] = "Reply to Review";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Reply to Review</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-controller="Home">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a asp-controller="Review" asp-action="Index">Reviews</a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">Reply to Review</li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Review Details</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <img src="@Model.Product?.ImageUrl" class="img-fluid rounded" alt="@Model.Product?.Name" />
                    </div>
                    <div class="col-md-10">
                        <p><strong>Product:</strong> @Model.Product?.Name</p>
                        <p><strong>Reviewed by:</strong> @Model.User?.FullName</p>
                        <p><strong>Rating:</strong> ⭐ @Model.Rating / 5</p>
                        <p><strong>Review:</strong> @Model.ReviewText</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reply Form -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Your Reply</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Review" asp-action="Reply" method="post">
                    <input type="hidden" asp-for="ReviewId" />
                    <div class="mb-3">
                        <label for="ReplyText" class="form-label">Reply</label>
                        <textarea asp-for="ReplyText" class="form-control" rows="4" placeholder="Write your reply here..." ></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Reply</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}