@model Address
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Edit Address </li>
            </ul>
        </div>
    </div>
</div>
<div class="checkout-area pt-95 pb-100">
    <div class="container">
        <div class="row">
            <form method="post" asp-action="Update">
                <input type="hidden" asp-for="AddressId" />
                <div id="address-form" class="checkout-account-toggle open-toggle2 mb-30">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-20">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName">
                                <span asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-20">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName">
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="billing-info mb-20">
                                <label asp-for="Region"></label>
                                <textarea asp-for="Region"></textarea>
                                <span asp-validation-for="Region"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-20">
                                <label asp-for="City"></label>
                                <input asp-for="City">
                                <span asp-validation-for="City"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-20">
                                <label asp-for="State"></label>
                                <input asp-for="State">
                                <span asp-validation-for="State"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-20">
                                <label asp-for="PinCode"></label>
                                <input asp-for="PinCode">
                                <span asp-validation-for="PinCode"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-20">
                                <label asp-for="Phone"></label>
                                <input asp-for="Phone">
                                <span asp-validation-for="Phone"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="billing-info mb-20">
                                <button type="submit" class="btn-hover p-2 border-none">Update address</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}