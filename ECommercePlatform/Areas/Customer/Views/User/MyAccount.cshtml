@model MyAccountVM
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">My Account </li>
            </ul>
        </div>
    </div>
</div>
<div class="checkout-area pb-80 pt-100">
    <div class="container">
        <div class="row">
            <div class="ml-auto mr-auto col-lg-9">
                <div class="checkout-wrapper">
                    <div id="faq" class="panel-group">
                        <div class="panel panel-default single-my-account">
                            <div class="panel-heading my-account-title">
                                <h3 class="panel-title"><span>1 .</span> <a data-toggle="collapse" data-parent="#faq" href="#my-account-1">Edit your account information </a></h3>
                            </div>
                            <div id="my-account-1" class="panel-collapse collapse show">
                                <div class="panel-body">
                                    <div class="myaccount-info-wrapper">
                                        <div class="account-info-wrapper">
                                            <h4>My Account Information</h4>
                                            <h5>Your Personal Details</h5>
                                        </div>
                                        <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                                            <input asp-for="UpdateProfile.ProfilePicture" hidden />
                                            <div class="row">
                                            <div class="col-lg-6 col-md-6">
                                                <div class="billing-info">
                                                    <label asp-for="UpdateProfile.FullName"></label>
                                                    <input asp-for="UpdateProfile.FullName" />
                                                    <span asp-validation-for="UpdateProfile.FullName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="billing-info">
                                                    <label asp-for="UpdateProfile.Email"></label>
                                                    <input asp-for="UpdateProfile.Email" />
                                                    <span asp-validation-for="UpdateProfile.Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="billing-info">
                                                    <label asp-for="UpdateProfile.Phone"></label>
                                                    <input asp-for="UpdateProfile.Phone" />
                                                    <span asp-validation-for="UpdateProfile.Phone" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="billing-info">
                                                    <label asp-for="UpdateProfile.ProfilePicture"></label>
                                                        <input type="file" name="profilePicture" class="form-control" placeholder="Enter User Profile Picture" accept="image/*" />
                                                        <span asp-validation-for="UpdateProfile.ProfilePicture" class="text-danger"></span>
                                                    <div class="col-md-3">
                                                        <img src="@Model.UpdateProfile?.ProfilePicture" class="img-fluid" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="billing-back-btn">
                                            <div class="billing-back">
                                                <a href="#"><i class="fa fa-arrow-up"></i> back</a>
                                            </div>
                                            <div class="billing-btn">
                                                <button type="submit">Continue</button>
                                            </div>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default single-my-account">
                            <div class="panel-heading my-account-title">
                                <h3 class="panel-title"><span>2 .</span> <a data-toggle="collapse" data-parent="#faq" href="#my-account-2">Change your password </a></h3>
                            </div>
                            <div id="my-account-2" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="myaccount-info-wrapper">
                                        <div class="account-info-wrapper">
                                            <h4>Change Password</h4>
                                            <h5>Your Password</h5>
                                        </div>
                                        <form asp-action="ChangePassword" method="post">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12">
                                                <div class="billing-info">
                                                    <label asp-for="ChangePassword.CurrentPassword"></label>
                                                    <input asp-for="ChangePassword.CurrentPassword" />
                                                    <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="billing-info">
                                                    <label asp-for="ChangePassword.Password"></label>
                                                    <input asp-for="ChangePassword.Password" />
                                                    <span asp-validation-for="ChangePassword.Password" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="billing-info">
                                                    <label asp-for="ChangePassword.ConfirmPassword"></label>
                                                    <input asp-for="ChangePassword.ConfirmPassword" />
                                                    <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="billing-back-btn">
                                            <div class="billing-back">
                                                <a href="#"><i class="fa fa-arrow-up"></i> back</a>
                                            </div>
                                            <div class="billing-btn">
                                                <button type="submit">Continue</button>
                                            </div>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default single-my-account">
                            <div class="panel-heading my-account-title">
                                <h3 class="panel-title"><span>3 .</span> <a data-toggle="collapse" data-parent="#faq" href="#my-account-3">Modify your address book entries   </a></h3>
                            </div>
                            <div id="my-account-3" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="myaccount-info-wrapper">
                                        <div class="account-info-wrapper  d-flex justify-content-between">
                                            <h4>Address Book Entries</h4>
                                            <a asp-controller="Address" asp-action="Add">Add Address</a>
                                        </div>
                                        <div class="entries-wrapper">
                                            @if(Model.Addresses.Count()>0)
                                            {
                                                @foreach (var address in Model.Addresses)
                                                {
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 d-flex align-items-center justify-content-center">
                                                            <div class="entries-info text-center">
                                                                <p>@address.FirstName @address.LastName </p>
                                                                <p>@address.Region </p>
                                                                <p>@address.City </p>
                                                                <p>@address.State</p>
                                                                <p>@address.PinCode </p>
                                                                <p>@address.Phone </p>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 d-flex align-items-center justify-content-center">
                                                            <div class="entries-edit-delete text-center">
                                                                <a class="edit" asp-controller="Address" asp-action="Update" asp-route-addressId="@address.AddressId">Edit</a>
                                                                <a asp-controller="Address" asp-action="Delete" asp-route-addressId="@address.AddressId">Delete</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }

                                            }
                                            else
                                            {
                                                <div>
                                                    <h3>No addresses found.</h3>
                                                </div>
                                            }
                                        </div>
                                        <div class="billing-back-btn">
                                            <div class="billing-back">
                                                <a href="#"><i class="fa fa-arrow-up"></i> back</a>
                                            </div>
                                            <div class="billing-btn">
                                                <button type="submit">Continue</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}