@model ContactVM
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100 pb-100">
    <div class="container">
        @* <div class="contact-map mb-10"> *@
        @*     <div id="map"></div> *@
        @* </div> *@
        <div class="custom-row-2">
            <div class="col-lg-4 col-md-5">
                <div class="contact-info-wrap">
                    <div class="single-contact-info">
                        <div class="contact-icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="contact-info-dec">
                            @if(Model.PhoneNumbers!=null)
                            {
                                @foreach(string phoneNumber in Model.PhoneNumbers)
                                {
                                    <p>@phoneNumber</p>
                                }
                            }
                        </div>
                    </div>
                    <div class="single-contact-info">
                        <div class="contact-icon">
                            <i class="fa fa-globe"></i>
                        </div>
                        <div class="contact-info-dec">
                            @if (Model.Emails != null)
                            {
                                @foreach (string email in Model.Emails)
                                {
                                    <p><a href="mailto:@email">@email</a></p>
                                }
                            }
                        </div>
                    </div>
                    <div class="single-contact-info">
                        <div class="contact-icon">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        <div class="contact-info-dec">
                            @Html.Raw(Model.Address)
                        </div>
                    </div>
                    <div class="contact-social text-center">
                        <h3>Follow Us</h3>
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest-p"></i></a></li>
                            <li><a href="#"><i class="fa fa-tumblr"></i></a></li>
                            <li><a href="#"><i class="fa fa-vimeo"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="contact-form">
                    <div class="contact-title mb-30">
                        <h2>Get In Touch</h2>
                    </div>
                    <form class="contact-form-style" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input placeholder="Name*" type="text" asp-for="Response.Name">
                                <span asp-validation-for="Response.Name" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <input placeholder="Email*" type="text" asp-for="Response.Email"> 
                                <span asp-validation-for="Response.Email" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <input placeholder="Phone*" type="text" asp-for="Response.Phone">
                                <span asp-validation-for="Response.Phone" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <input placeholder="Subject*" type="text" asp-for="Response.Subject">
                                <span asp-validation-for="Response.Subject" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <textarea placeholder="Your Message*" asp-for="Response.Message"></textarea>
                                <span asp-validation-for="Response.Message" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <button class="submit" type="submit">SEND</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}