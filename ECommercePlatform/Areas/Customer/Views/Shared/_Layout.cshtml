    <style>
        /* Hide radio buttons */
        .saved-addresses .form-check-input {
            display: none;
        }

        /* Default address styling */
        .address-item {
            cursor: pointer;
            padding: 10px;
            border: 2px solid #ddd;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: 0.3s;
            background-color: white;
        }
            .address-item:hover {
                border-color: #A749FF;
            }

            /* Highlight selected address */
            .address-item.selected {
                border-color: #A749FF;
                background-color: #A749FFAA;
                color: white;
            }

        .checkout-account {
            margin-top: 20px;
        }
        rating{
            display:flex;
            flex-direction: row-reverse;
            justify-content: center;
        }

        .rating input {
            display: none; 
        }

        .rating label {
            font-size: 30px;
            color: #ccc;
            cursor: pointer;
        }

            .rating input:checked ~ label,
            .rating label:hover,
            .rating label:hover ~ label {
                color: gold;
            }
    </style>
